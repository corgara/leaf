<% if @tab.errors.any? %>
	 <h2>The following errors prevented the tab from saving:</h2>
	 <ul>
	 	<% @tab.errors.full_messages.each do |msg|%>
	 		<li><%= msg %></li>
	 	<% end %>
	 </ul>
<% end %>

<%= form_for @tab do |f| %>
 <p>
	  <%= f.label :title %><br>
	  <%= f.text_field :title %>
 </p>
 <p>
	  <%= f.label :description %><br>
	  <%= f.text_area :description %>
 </p>
 <p>
  	<%= f.submit %>
 </p>
<% end %>

<%= link_to 'Back', tabs_path %>